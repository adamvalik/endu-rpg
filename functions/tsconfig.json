{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",

    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src" // Only compile files in the 'src' folder
  ],
  "exclude": [
    "node_modules" // Ignore node_modules
  ]
}
